<Window x:Class="ColMate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ColMate.ViewModels"
        xmlns:helpers="clr-namespace:ColMate.Helpers"
        Title="ColMate" Height="720" Width="1200"
        Icon="Assets/icon.ico"
        Background="#FF121212" Foreground="#FFEAEAEA"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <Window.Resources>
        <helpers:CenterConverter x:Key="CenterConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        
        <!-- Modern Dark Theme Styles -->
        
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="#FFEAEAEA"/>
            <Setter Property="BorderBrush" Value="#FF3D3D3D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3D3D3D"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF505050"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF505050"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FF1A1A1A"/>
                                <Setter Property="Foreground" Value="#FF666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="Foreground" Value="#FFEAEAEA"/>
            <Setter Property="BorderBrush" Value="#FF3D3D3D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="CaretBrush" Value="#FFEAEAEA"/>
            <Setter Property="SelectionBrush" Value="#FF0078D4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF0078D4"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF505050"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="Foreground" Value="#FFEAEAEA"/>
            <Setter Property="BorderBrush" Value="#FF3D3D3D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Grid.Column="2" Focusable="False"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="Border" Background="#FF1E1E1E" BorderBrush="#FF3D3D3D" 
                                                BorderThickness="1" CornerRadius="6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="24"/>
                                                </Grid.ColumnDefinitions>
                                                <Path Grid.Column="1" Data="M0,0 L4,4 L8,0" Stroke="#FFBFBFBF" 
                                                      StrokeThickness="1.5" HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center" Margin="0,0,4,0"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF505050"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF0078D4"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="10,8,28,8" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Border x:Name="DropDown" Background="#FF1E1E1E" BorderBrush="#FF3D3D3D" 
                                        BorderThickness="1" CornerRadius="6" Margin="0,2,0,0"
                                        MinWidth="{TemplateBinding ActualWidth}" MaxHeight="200">
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFEAEAEA"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF2D2D2D"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Slider Style -->
        <Style TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border x:Name="TrackBackground" Height="6" VerticalAlignment="Center"
                                    Background="#FF2D2D2D" CornerRadius="3"/>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Height="6" CornerRadius="3" Background="#FF0078D4"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse x:Name="thumb" Width="18" Height="18" Fill="#FFEAEAEA"
                                                         Effect="{x:Null}">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Fill" Value="#FF0078D4"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="Transparent"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="BorderBrush" Value="#FF3D3D3D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FFEAEAEA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer Padding="4">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ListBoxItem Style -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFEAEAEA"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}" CornerRadius="4">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF2D2D2D"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- TabControl Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <!-- TabItem Style -->
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF888888"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}" CornerRadius="8" Margin="0,0,6,0"
                                BorderThickness="1" BorderBrush="Transparent">
                            <ContentPresenter x:Name="ContentSite" ContentSource="Header" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF0078D4"/>
                                <Setter Property="Foreground" Value="#FFFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF2D2D2D"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF3D3D3D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Separator Style -->
        <Style TargetType="Separator">
            <Setter Property="Background" Value="#FF3D3D3D"/>
            <Setter Property="Height" Value="1"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>
        
        <!-- ScrollBar Style -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="#FF1E1E1E" CornerRadius="5"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#FF505050" CornerRadius="5" Margin="2"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF1B1B1B" CornerRadius="14" Padding="12" BorderBrush="#FF2A2A2A" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Camera -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Camera" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#FFBFBFBF"/>
                    <ComboBox Width="220"
                              ItemsSource="{Binding Cameras}"
                              SelectedItem="{Binding SelectedCamera}"
                              DisplayMemberPath="DisplayName"
                              VerticalContentAlignment="Center"/>
                    <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="8,0,0,0" Padding="10,4"/>
                </StackPanel>

                <!-- Start/Stop + Status -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Start" Command="{Binding StartCommand}" Padding="14,4" Margin="0,0,6,0"/>
                    <Button Content="Stop" Command="{Binding StopCommand}" Padding="14,4"/>
                </StackPanel>

                <TextBlock Grid.Column="4" Text="{Binding Status}" VerticalAlignment="Center" Foreground="#FFBFBFBF" TextTrimming="CharacterEllipsis"/>

                <!-- Focus/Exposure -->
                <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Focus" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#FFBFBFBF"/>
                    <Button Content="-" Command="{Binding FocDown}" Width="28" Height="28" Padding="0"/>
                    <Slider Width="100" Minimum="{Binding FocMin}" Maximum="{Binding FocMax}" Value="{Binding Focus}" VerticalAlignment="Center" Margin="6,0"/>
                    <TextBox Width="50" Text="{Binding Focus, UpdateSourceTrigger=PropertyChanged, StringFormat=F0}" VerticalAlignment="Center" Margin="4,0"/>
                    <Button Content="+" Command="{Binding FocUp}" Width="28" Height="28" Padding="0"/>

                    <TextBlock Text="Exposure" VerticalAlignment="Center" Margin="18,0,8,0" Foreground="#FFBFBFBF"/>
                    <Button Content="-" Command="{Binding ExpDown}" Width="28" Height="28" Padding="0"/>
                    <Slider Width="100" Minimum="{Binding ExpMin}" Maximum="{Binding ExpMax}" Value="{Binding Exposure}" VerticalAlignment="Center" Margin="6,0"/>
                    <TextBox Width="50" Text="{Binding Exposure, UpdateSourceTrigger=PropertyChanged, StringFormat=F0}" VerticalAlignment="Center" Margin="4,0"/>
                    <Button Content="+" Command="{Binding ExpUp}" Width="28" Height="28" Padding="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>

            <!-- Video + Overlay -->
            <Border Grid.Column="0" Background="Black" CornerRadius="14" BorderBrush="#FF2A2A2A" BorderThickness="1" ClipToBounds="True"
                    MouseWheel="VideoArea_MouseWheel" MouseMove="VideoArea_MouseMove" MouseLeftButtonDown="VideoArea_MouseLeftButtonDown" MouseLeftButtonUp="VideoArea_MouseLeftButtonUp">
                <Grid>
                    <!-- Viewbox scales the entire native-coordinate scene to any window size -->
                    <Viewbox Stretch="Uniform">
                        <Grid Width="{Binding FrameWidth}" Height="{Binding FrameHeight}">
                            <Grid.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="{Binding Zoom}" ScaleY="{Binding Zoom}" CenterX="{Binding OverlayCenterX}" CenterY="{Binding OverlayCenterY}"/>
                                    <TranslateTransform X="{Binding PanX}" Y="{Binding PanY}"/>
                                </TransformGroup>
                            </Grid.RenderTransform>
                            <Image Source="{Binding PreviewFrame}" Stretch="Fill"/>

                            <Canvas IsHitTestVisible="False">
                                <!-- Rotatable crosshair -->
                                <Canvas.RenderTransform>
                                    <RotateTransform Angle="{Binding CrosshairAngle}"
                                                     CenterX="{Binding OverlayCenterX}"
                                                     CenterY="{Binding OverlayCenterY}"/>
                                </Canvas.RenderTransform>

                                <Line X1="{Binding OverlayCenterX}" Y1="{Binding CrosshairY1}"
                                      X2="{Binding OverlayCenterX}" Y2="{Binding CrosshairY2}"
                                      Stroke="{Binding CrosshairBrush}" StrokeThickness="{Binding CrosshairThickness}" Opacity="0.95"/>

                                <Line X1="{Binding CrosshairX1}" Y1="{Binding OverlayCenterY}"
                                      X2="{Binding CrosshairX2}" Y2="{Binding OverlayCenterY}"
                                      Stroke="{Binding CrosshairBrush}" StrokeThickness="{Binding CrosshairThickness}" Opacity="0.95"/>

                                <!-- Circles -->
                                <ItemsControl ItemsSource="{Binding Circles}" Width="{Binding FrameWidth}" Height="{Binding FrameHeight}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas Width="{Binding FrameWidth}" Height="{Binding FrameHeight}"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Canvas.Left">
                                                <Setter.Value>
                                                    <MultiBinding Converter="{StaticResource CenterConverter}">
                                                        <Binding Path="DataContext.OverlayCenterX" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                        <Binding Path="Diameter"/>
                                                    </MultiBinding>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Canvas.Top">
                                                <Setter.Value>
                                                    <MultiBinding Converter="{StaticResource CenterConverter}">
                                                        <Binding Path="DataContext.OverlayCenterY" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                        <Binding Path="Diameter"/>
                                                    </MultiBinding>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Ellipse Stroke="{Binding Stroke}"
                                                     StrokeThickness="{Binding Thickness}"
                                                     Fill="Transparent"
                                                     Width="{Binding Diameter}"
                                                     Height="{Binding Diameter}"
                                                     Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibility}}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Canvas>
                        </Grid>
                    </Viewbox>
                    
                    <!-- Zoom indicator overlay -->
                    <Border Background="#88000000" CornerRadius="8" Padding="10,6" 
                            HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Zoom:" Foreground="#FFBFBFBF" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding Zoom, StringFormat=P0}" Foreground="#FFEAEAEA" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <Button Content="Reset" Click="ResetZoom_Click" Padding="8,2" Margin="10,0,0,0" FontSize="11"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Right panel -->
            <Border Grid.Column="2" Background="#FF1B1B1B" CornerRadius="14" Padding="12" BorderBrush="#FF2A2A2A" BorderThickness="1">
                <TabControl Background="Transparent" BorderThickness="0">
                    <TabItem Header="Overlay">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="0,8,0,0">

                                <TextBlock Text="Crosshair" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#FFEAEAEA"/>
                                <Grid Margin="0,0,0,14">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Angle (°)" VerticalAlignment="Center" Foreground="#FFBFBFBF"/>
                                    <Button Grid.Row="0" Grid.Column="1" Content="-" Command="{Binding CrosshairAngleDown}" Width="24" Height="24" Padding="0"/>
                                    <Slider Grid.Row="0" Grid.Column="2" Minimum="0" Maximum="360" Value="{Binding CrosshairAngle}" Margin="4,0" MouseDoubleClick="ResetAngle_DoubleClick"/>
                                    <TextBox Grid.Row="0" Grid.Column="3" Width="55" Text="{Binding CrosshairAngle, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}" VerticalAlignment="Center" Margin="4,0" Padding="4,4" MouseDoubleClick="ResetAngle_DoubleClick"/>
                                    <Button Grid.Row="0" Grid.Column="4" Content="+" Command="{Binding CrosshairAngleUp}" Width="24" Height="24" Padding="0"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Length" VerticalAlignment="Center" Foreground="#FFBFBFBF" Margin="0,8,0,0"/>
                                    <Button Grid.Row="1" Grid.Column="1" Content="-" Command="{Binding CrosshairLengthDown}" Width="24" Height="24" Padding="0" Margin="0,8,0,0"/>
                                    <Slider Grid.Row="1" Grid.Column="2" Minimum="50" Maximum="2000" Value="{Binding CrosshairLength}" Margin="4,8,4,0" MouseDoubleClick="ResetLength_DoubleClick"/>
                                    <TextBox Grid.Row="1" Grid.Column="3" Width="55" Text="{Binding CrosshairLength, UpdateSourceTrigger=PropertyChanged, StringFormat=F0}" VerticalAlignment="Center" Margin="4,8,4,0" Padding="4,4" MouseDoubleClick="ResetLength_DoubleClick"/>
                                    <Button Grid.Row="1" Grid.Column="4" Content="+" Command="{Binding CrosshairLengthUp}" Width="24" Height="24" Padding="0" Margin="0,8,0,0"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Thickness" VerticalAlignment="Center" Foreground="#FFBFBFBF" Margin="0,8,0,0"/>
                                    <Button Grid.Row="2" Grid.Column="1" Content="-" Command="{Binding CrosshairThicknessDown}" Width="24" Height="24" Padding="0" Margin="0,8,0,0"/>
                                    <Slider Grid.Row="2" Grid.Column="2" Minimum="1" Maximum="10" Value="{Binding CrosshairThickness}" Margin="4,8,4,0" MouseDoubleClick="ResetThickness_DoubleClick"/>
                                    <TextBox Grid.Row="2" Grid.Column="3" Width="55" Text="{Binding CrosshairThickness, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}" VerticalAlignment="Center" Margin="4,8,4,0" Padding="4,4" MouseDoubleClick="ResetThickness_DoubleClick"/>
                                    <Button Grid.Row="2" Grid.Column="4" Content="+" Command="{Binding CrosshairThicknessUp}" Width="24" Height="24" Padding="0" Margin="0,8,0,0"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Color" VerticalAlignment="Center" Foreground="#FFBFBFBF" Margin="0,8,0,0"/>
                                    <ComboBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" ItemsSource="{Binding BrushOptions}"
                                              DisplayMemberPath="Name" SelectedValuePath="Brush"
                                              SelectedValue="{Binding CrosshairBrush}" Margin="0,8,0,0"/>
                                </Grid>

                                <Separator Margin="0,4,0,12"/>

                                <!-- Manual Overlay Offset -->
                                <TextBlock Text="Overlay Offset" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#FFEAEAEA"/>
                                <Grid Margin="0,0,0,14">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Offset X" VerticalAlignment="Center" Foreground="#FFBFBFBF"/>
                                    <Button Grid.Row="0" Grid.Column="1" Content="-" Command="{Binding OffsetXDown}" Width="24" Height="24" Padding="0"/>
                                    <Slider Grid.Row="0" Grid.Column="2" Minimum="-500" Maximum="500" Value="{Binding OverlayOffsetX}" Margin="4,0" MouseDoubleClick="ResetOffsetX_DoubleClick"/>
                                    <TextBox Grid.Row="0" Grid.Column="3" Width="55" Text="{Binding OverlayOffsetX, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}" VerticalAlignment="Center" Margin="4,0" Padding="4,4" MouseDoubleClick="ResetOffsetX_DoubleClick"/>
                                    <Button Grid.Row="0" Grid.Column="4" Content="+" Command="{Binding OffsetXUp}" Width="24" Height="24" Padding="0"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Offset Y" VerticalAlignment="Center" Foreground="#FFBFBFBF" Margin="0,8,0,0"/>
                                    <Button Grid.Row="1" Grid.Column="1" Content="-" Command="{Binding OffsetYDown}" Width="24" Height="24" Padding="0" Margin="0,8,0,0"/>
                                    <Slider Grid.Row="1" Grid.Column="2" Minimum="-500" Maximum="500" Value="{Binding OverlayOffsetY}" Margin="4,8,4,0" MouseDoubleClick="ResetOffsetY_DoubleClick"/>
                                    <TextBox Grid.Row="1" Grid.Column="3" Width="55" Text="{Binding OverlayOffsetY, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}" VerticalAlignment="Center" Margin="4,8,4,0" Padding="4,4" MouseDoubleClick="ResetOffsetY_DoubleClick"/>
                                    <Button Grid.Row="1" Grid.Column="4" Content="+" Command="{Binding OffsetYUp}" Width="24" Height="24" Padding="0" Margin="0,8,0,0"/>
                                </Grid>

                                <Separator Margin="0,4,0,12"/>

                                <DockPanel Margin="0,0,0,8">
                                    <TextBlock Text="Circles" FontWeight="SemiBold" DockPanel.Dock="Left" Foreground="#FFEAEAEA" VerticalAlignment="Center"/>
                                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                        <Button Content="+" Command="{Binding AddCircleCommand}" Width="28" Height="28" Padding="0" FontSize="16" FontWeight="Bold"/>
                                        <Button Content="−" Command="{Binding RemoveCircleCommand}" Width="28" Height="28" Padding="0" FontSize="16" FontWeight="Bold" Margin="6,0,0,0"/>
                                    </StackPanel>
                                </DockPanel>

                                <ListBox ItemsSource="{Binding Circles}" SelectedItem="{Binding SelectedCircle}" Height="150">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox IsChecked="{Binding IsVisible}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBlock Text="R=" Foreground="#FFBFBFBF"/>
                                                <TextBlock Text="{Binding Radius}" Margin="4,0,0,0"/>
                                                <TextBlock Text="  |  " Foreground="#FF444444" Margin="8,0"/>
                                                <TextBlock Text="{Binding StrokeName}" Foreground="#FFBFBFBF"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <Border Background="#FF161616" BorderBrush="#FF2A2A2A" BorderThickness="1" CornerRadius="10" Padding="10" Margin="0,10,0,0">
                                    <StackPanel>
                                        <TextBlock Text="Selected Circle" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#FFEAEAEA"/>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Radius" VerticalAlignment="Center" Foreground="#FFBFBFBF"/>
                                            <Button Grid.Row="0" Grid.Column="1" Content="-" Command="{Binding CircleRadiusDown}" Width="24" Height="24" Padding="0"/>
                                            <Slider Grid.Row="0" Grid.Column="2" Minimum="10" Maximum="2500"
                                                    Value="{Binding SelectedCircle.Radius}" Margin="4,0"/>
                                            <TextBox Grid.Row="0" Grid.Column="3" Width="55" Text="{Binding SelectedCircle.Radius, UpdateSourceTrigger=PropertyChanged, StringFormat=F0}" VerticalAlignment="Center" Margin="4,0" Padding="4,4"/>
                                            <Button Grid.Row="0" Grid.Column="4" Content="+" Command="{Binding CircleRadiusUp}" Width="24" Height="24" Padding="0"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Thickness" VerticalAlignment="Center" Foreground="#FFBFBFBF" Margin="0,8,0,0"/>
                                            <Button Grid.Row="1" Grid.Column="1" Content="-" Command="{Binding CircleThicknessDown}" Width="24" Height="24" Padding="0" Margin="0,8,0,0"/>
                                            <Slider Grid.Row="1" Grid.Column="2" Minimum="1" Maximum="12"
                                                    Value="{Binding SelectedCircle.Thickness}" Margin="4,8,4,0"/>
                                            <TextBox Grid.Row="1" Grid.Column="3" Width="55" Text="{Binding SelectedCircle.Thickness, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}" VerticalAlignment="Center" Margin="4,8,4,0" Padding="4,4"/>
                                            <Button Grid.Row="1" Grid.Column="4" Content="+" Command="{Binding CircleThicknessUp}" Width="24" Height="24" Padding="0" Margin="0,8,0,0"/>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Color" VerticalAlignment="Center" Foreground="#FFBFBFBF" Margin="0,8,0,0"/>
                                            <ComboBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" ItemsSource="{Binding BrushOptions}"
                                                      DisplayMemberPath="Name" SelectedValuePath="Brush"
                                                      SelectedValue="{Binding SelectedCircle.Stroke}" Margin="0,8,0,0"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="Calibration">
                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="Center (Pixel)" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#FFEAEAEA"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Center X" VerticalAlignment="Center" Foreground="#FFBFBFBF"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CenterX, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Center Y" VerticalAlignment="Center" Foreground="#FFBFBFBF" Margin="0,8,0,0"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CenterY, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Calibration Base" VerticalAlignment="Center" Foreground="#FFBFBFBF" Margin="0,8,0,0"/>
                                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBox Width="80" Text="{Binding CalibrationWidth, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock Text=" × " VerticalAlignment="Center" Foreground="#FFBFBFBF" Margin="6,0"/>
                                    <TextBox Width="80" Text="{Binding CalibrationHeight, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>


                                <Button Grid.Row="3" Grid.ColumnSpan="2" Content="Set to Frame Center"
                                        Command="{Binding SetCenterToFrameCommand}" Margin="0,12,0,0" Padding="10,6"/>
                            </Grid>

                            <TextBlock Text="{Binding FrameInfo}" Foreground="#FFBFBFBF" Margin="0,12,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Window>
