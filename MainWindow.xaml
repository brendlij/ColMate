<Window x:Class="ColMate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ColMate.ViewModels"
        Title="ColMate" Height="720" Width="1200"
        Background="#FF121212" Foreground="#FFEAEAEA"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <Window.Resources>
        <vm:CenterConverter x:Key="CenterConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF1B1B1B" CornerRadius="14" Padding="12" BorderBrush="#FF2A2A2A" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Camera -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Kamera" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#FFBFBFBF"/>
                    <ComboBox Width="220"
                              ItemsSource="{Binding Cameras}"
                              SelectedItem="{Binding SelectedCamera}"
                              DisplayMemberPath="Name"
                              VerticalContentAlignment="Center"/>
                    <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="8,0,0,0" Padding="10,4"/>
                </StackPanel>

                <!-- Start/Stop + Status -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Start" Command="{Binding StartCommand}" Padding="14,4" Margin="0,0,6,0"/>
                    <Button Content="Stop" Command="{Binding StopCommand}" Padding="14,4"/>
                </StackPanel>

                <TextBlock Grid.Column="4" Text="{Binding Status}" VerticalAlignment="Center" Foreground="#FFBFBFBF" TextTrimming="CharacterEllipsis"/>

                <!-- Focus/Exposure -->
                <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Fokus" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#FFBFBFBF"/>
                    <Button Content="-" Command="{Binding FocDown}" Width="28" Height="28" Padding="0"/>
                    <Slider Width="120" Minimum="{Binding FocMin}" Maximum="{Binding FocMax}" Value="{Binding Focus}" VerticalAlignment="Center" Margin="6,0"/>
                    <Button Content="+" Command="{Binding FocUp}" Width="28" Height="28" Padding="0"/>

                    <TextBlock Text="Belichtung" VerticalAlignment="Center" Margin="18,0,8,0" Foreground="#FFBFBFBF"/>
                    <Button Content="-" Command="{Binding ExpDown}" Width="28" Height="28" Padding="0"/>
                    <Slider Width="120" Minimum="{Binding ExpMin}" Maximum="{Binding ExpMax}" Value="{Binding Exposure}" VerticalAlignment="Center" Margin="6,0"/>
                    <Button Content="+" Command="{Binding ExpUp}" Width="28" Height="28" Padding="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>

            <!-- Video + Overlay -->
            <Border Grid.Column="0" Background="Black" CornerRadius="14" BorderBrush="#FF2A2A2A" BorderThickness="1" ClipToBounds="True">
                <!-- Viewbox scales the entire native-coordinate scene to any window size -->
                <Viewbox Stretch="Uniform">
                    <Grid Width="{Binding FrameWidth}" Height="{Binding FrameHeight}">
                        <Image Source="{Binding PreviewFrame}" Stretch="Fill"/>

                        <Canvas IsHitTestVisible="False">
                            <!-- Rotatable crosshair -->
                            <Canvas.RenderTransform>
                                <RotateTransform Angle="{Binding CrosshairAngle}"
                                                 CenterX="{Binding CenterX}"
                                                 CenterY="{Binding CenterY}"/>
                            </Canvas.RenderTransform>

                            <Line X1="{Binding CenterX}" Y1="{Binding CrosshairY1}"
                                  X2="{Binding CenterX}" Y2="{Binding CrosshairY2}"
                                  Stroke="{Binding CrosshairBrush}" StrokeThickness="{Binding CrosshairThickness}" Opacity="0.95"/>

                            <Line X1="{Binding CrosshairX1}" Y1="{Binding CenterY}"
                                  X2="{Binding CrosshairX2}" Y2="{Binding CenterY}"
                                  Stroke="{Binding CrosshairBrush}" StrokeThickness="{Binding CrosshairThickness}" Opacity="0.95"/>

                            <!-- Circles -->
                            <ItemsControl ItemsSource="{Binding Circles}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Ellipse Stroke="{Binding Stroke}"
                                                 StrokeThickness="{Binding Thickness}"
                                                 Fill="Transparent"
                                                 Width="{Binding Diameter}"
                                                 Height="{Binding Diameter}">

                                            <Canvas.Left>
                                                <MultiBinding Converter="{StaticResource CenterConverter}">
                                                    <Binding Path="DataContext.CenterX" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                    <Binding Path="Diameter"/>
                                                </MultiBinding>
                                            </Canvas.Left>

                                            <Canvas.Top>
                                                <MultiBinding Converter="{StaticResource CenterConverter}">
                                                    <Binding Path="DataContext.CenterY" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                    <Binding Path="Diameter"/>
                                                </MultiBinding>
                                            </Canvas.Top>
                                        </Ellipse>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Canvas>
                    </Grid>
                </Viewbox>
            </Border>

            <!-- Right panel -->
            <Border Grid.Column="2" Background="#FF1B1B1B" CornerRadius="14" Padding="12" BorderBrush="#FF2A2A2A" BorderThickness="1">
                <TabControl Background="Transparent" BorderThickness="0">
                    <TabItem Header="Overlay">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="0,8,0,0">

                                <TextBlock Text="Crosshair" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <Grid Margin="0,0,0,14">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Winkel (°)" VerticalAlignment="Center" Foreground="#FFBFBFBF"/>
                                    <Slider Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="360" Value="{Binding CrosshairAngle}" />

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Länge" VerticalAlignment="Center" Foreground="#FFBFBFBF" Margin="0,8,0,0"/>
                                    <Slider Grid.Row="1" Grid.Column="1" Minimum="50" Maximum="2000" Value="{Binding CrosshairLength}" Margin="0,8,0,0"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Dicke" VerticalAlignment="Center" Foreground="#FFBFBFBF" Margin="0,8,0,0"/>
                                    <Slider Grid.Row="2" Grid.Column="1" Minimum="1" Maximum="10" Value="{Binding CrosshairThickness}" Margin="0,8,0,0"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Farbe" VerticalAlignment="Center" Foreground="#FFBFBFBF" Margin="0,8,0,0"/>
                                    <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding BrushOptions}"
                                              DisplayMemberPath="Name" SelectedValuePath="Brush"
                                              SelectedValue="{Binding CrosshairBrush}" Margin="0,8,0,0"/>
                                </Grid>

                                <Separator Margin="0,4,0,12"/>

                                <DockPanel Margin="0,0,0,8">
                                    <TextBlock Text="Kreise" FontWeight="SemiBold" DockPanel.Dock="Left"/>
                                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                        <Button Content="+" Command="{Binding AddCircleCommand}" Width="32" Margin="0,0,6,0"/>
                                        <Button Content="-" Command="{Binding RemoveCircleCommand}" Width="32"/>
                                    </StackPanel>
                                </DockPanel>

                                <ListBox ItemsSource="{Binding Circles}" SelectedItem="{Binding SelectedCircle}" Height="150">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="R=" Foreground="#FFBFBFBF"/>
                                                <TextBlock Text="{Binding Radius}" Margin="4,0,0,0"/>
                                                <TextBlock Text="  |  " Foreground="#FF444444" Margin="8,0"/>
                                                <TextBlock Text="{Binding StrokeName}" Foreground="#FFBFBFBF"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <Border Background="#FF161616" BorderBrush="#FF2A2A2A" BorderThickness="1" CornerRadius="10" Padding="10" Margin="0,10,0,0">
                                    <StackPanel>
                                        <TextBlock Text="Ausgewählter Kreis" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Radius" VerticalAlignment="Center" Foreground="#FFBFBFBF"/>
                                            <Slider Grid.Row="0" Grid.Column="1" Minimum="10" Maximum="2500"
                                                    Value="{Binding SelectedCircle.Radius}" />

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Dicke" VerticalAlignment="Center" Foreground="#FFBFBFBF" Margin="0,8,0,0"/>
                                            <Slider Grid.Row="1" Grid.Column="1" Minimum="1" Maximum="12"
                                                    Value="{Binding SelectedCircle.Thickness}" Margin="0,8,0,0"/>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Farbe" VerticalAlignment="Center" Foreground="#FFBFBFBF" Margin="0,8,0,0"/>
                                            <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding BrushOptions}"
                                                      DisplayMemberPath="Name" SelectedValuePath="Brush"
                                                      SelectedValue="{Binding SelectedCircle.Stroke}" Margin="0,8,0,0"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="Kalibrierung">
                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="Center (Pixel)" FontWeight="SemiBold" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Center X" VerticalAlignment="Center" Foreground="#FFBFBFBF"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CenterX, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Center Y" VerticalAlignment="Center" Foreground="#FFBFBFBF" Margin="0,8,0,0"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CenterY, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,0"/>

                                <Button Grid.Row="2" Grid.ColumnSpan="2" Content="Auf Bildmitte setzen"
                                        Command="{Binding SetCenterToFrameCommand}" Margin="0,12,0,0" Padding="10,6"/>
                            </Grid>

                            <TextBlock Text="{Binding FrameInfo}" Foreground="#FFBFBFBF" Margin="0,12,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Window>
